<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal">
<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/location_tab_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:text="currentLocation"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
       />

    <TextView
        android:id="@+id/new_notifications_for_list_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/location_tab_txt_view"
        android:layout_marginStart="-8dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/location_tab_txt_view"
        android:background="@drawable/notification_badge"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="visible" />
</RelativeLayout>
</RelativeLayout>